@model HomeVM
@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
<div class="about-area pt-145 pb-155">
    <div class="container">
        @foreach (var about in Model.AboutUses)
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="about-content">
                        <h2>@about.Title</h2>
                        <p>@about.Description</p>
                        @*<p class="hidden-sm">I must explain to you how all this mistaken idea of denouncing pleure and prsing pain was born and I will give you a complete account of the system</p>*@
                        <a class="default-btn" href="#">view courses</a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="about-img">
                        <img src="@about.ImagePath" alt="about">
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-title text-center">
                    <img src="~/assetsf/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
           @foreach (var teacher in Model.Teachers)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="single-teacher">
                        <div class="single-teacher-img">
                            <a asp-controller="Teacher" asp-action="TeacherDetail" asp-route-id="@teacher.Id"><img src="@teacher.ImagePath" alt="teacher"></a>
                        </div>
                        <div class="single-teacher-content text-center">
                            <h2><aasp-controller ="Teacher" asp-action="TeacherDetail" asp-route-id="@teacher.Id">@teacher.FullName</aasp-controller></h2>
                            <h4>@teacher.Position</h4>
                            <ul>
                                <li><a href="#"><i class="zmdi zmdi-facebook"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-pinterest"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-vimeo"></i></a></li>
                                <li><a href="#"><i class="zmdi zmdi-twitter"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                @foreach (var item in Model.Testimonials)
                {
                    <div class="col-lg-8 offset-lg-2">
                        <div class="single-testimonial">
                            <div class="testimonial-info">
                                <div class="testimonial-img">
                                    <img src="@item.ImagePath" alt="testimonial">
                                </div>
                                <div class="testimonial-content">
                                    <p>@item.Description</p>
                                    <h4>@item.Name</h4>
                                    <h5>@item.Position</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="notice-right-wrapper mb-25 pb-25">
                    <h3>TAKE A VIDEO TOUR</h3>
                    <div class="notice-video">
                        <div class="video-icon video-hover">
                            <a class="video-popup" href="https://www.youtube.com/watch?v=ZN6tueGAA7g">
                                <i class="zmdi zmdi-play"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @foreach (var notice in Model.NoticeBoard)
                        {
                            <div class="single-notice-left mb-23 pb-20">
                                <h4>@notice.Date.ToString("M") , @notice.Date.Year</h4>
                                <p>@notice.Description </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
