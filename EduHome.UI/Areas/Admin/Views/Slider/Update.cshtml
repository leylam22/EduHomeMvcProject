@model Slider
@{
    ViewData["Title"] = "Update";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title mb-4">Update Blog Items</h4>

        <form method="post">
            <img src="@Model.Image" style="width:300px" />
            <div class="row mb-4">
                <label asp-for="Image" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Image" class="form-control" id="horizontal-firstname-input" placeholder="Enter Image Path ">
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>
            </div>
            <div class="row mb-4">
                <label asp-for="Description" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Description" class="form-control" id="horizontal-firstname-input" placeholder="Enter Blogger ">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="row mb-4">
                <label asp-for="SecondTitle" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="SecondTitle" class="form-control" id="horizontal-firstname-input" placeholder="Enter Date ">
                    <span class="text-danger" asp-validation-for="SecondTitle"></span>
                </div>
            </div>
            <div class="row mb-4">
                <label asp-for="Title" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-9">
                    <input asp-for="Title" class="form-control" id="horizontal-firstname-input" placeholder="Enter Title ">
                    <span class="text-danger" asp-asp-validation-for="Title"></span>
                </div>
            </div>

            <div class="row justify-content-end">
                <div class="col-sm-9">
                    <div>
                        <button type="submit" class="btn btn-primary w-md">Update</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <!-- end card body -->
</div>

@section Script{
    <partial name="_ValidationScript" />
}

