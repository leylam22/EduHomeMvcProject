@model IEnumerable<Course>
@using EduHome.Core.Entities;
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Course table</h4>
                <div class="table-responsive">
                    <a asp-area="Admin" asp-controller="Course" asp-action="Create" class="btn btn-success waves-effect waves-light">Create</a>
                    <table class="table mb-0">

                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Catagory</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <th scope="row"><img style="width:250px" src="/@course.ImagePath" /></th>
                                    <td>@course.Title</td>
                                    <td>@course.Description</td>
                                    <td>@course.CourseCatagory.Catagory</td>
                                    <td>
                                        <button type="button" class="btn btn-warning waves-effect waves-light">Detail</button>
                                        <button type="button" class="btn btn-info waves-effect waves-light">Update</button>
                                        <button type="button" class="btn btn-danger waves-effect waves-light">Delete</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

